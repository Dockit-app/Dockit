<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Summary"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="#000000"
            android:textSize="65sp"
            android:padding="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="@dimen/card_length"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/logged_user_border"
                            android:paddingBottom="7dp">
                            <TextView
                                android:id="@+id/table_text"
                                android:layout_marginTop="20dp"
                                android:layout_width="150dp"
                                android:layout_height="50dp"
                                android:textSize="40sp"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:textAllCaps="true"
                                android:textAlignment="center"
                                android:layout_centerHorizontal="true" />
                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="5dp"
                                android:textSize="25sp"
                                android:text="Table"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@id/table_text"/>
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="@dimen/card_length"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/logged_user_border"
                            android:paddingBottom="7dp">
                            <TextView
                                android:id="@+id/covers_text"
                                android:layout_marginTop="20dp"
                                android:layout_width="150dp"
                                android:layout_height="50dp"
                                android:textSize="40sp"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:textAllCaps="true"
                                android:textAlignment="center"
                                android:layout_centerHorizontal="true" />
                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="5dp"
                                android:textSize="25sp"
                                android:text="Covers"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@id/covers_text"/>
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/logged_user_border"
                            android:paddingBottom="7dp">
                            <TextView
                                android:id="@+id/server_text"
                                android:layout_marginTop="20dp"
                                android:layout_width="150dp"
                                android:layout_height="50dp"
                                android:textSize="40sp"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:textAllCaps="true"
                                android:textAlignment="center"
                                android:layout_centerHorizontal="true" />
                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="5dp"
                                android:textSize="25sp"
                                android:text="Server"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@id/server_text"/>
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/logged_user_border"
                            android:paddingBottom="7dp">
                            <TextView
                                android:id="@+id/time_text"
                                android:layout_marginTop="20dp"
                                android:layout_width="150dp"
                                android:layout_height="50dp"
                                android:textSize="40sp"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:textAllCaps="true"
                                android:textAlignment="center"
                                android:layout_centerHorizontal="true" />
                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="5dp"
                                android:textSize="25sp"
                                android:text="Time"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@id/time_text"/>
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/summary_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>